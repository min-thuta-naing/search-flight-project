# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flight_search
DB_USER=postgres
DB_PASSWORD=postgres

# TimescaleDB Extension
ENABLE_TIMESCALEDB=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
# Window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000
# Max requests per window (default: 1000 in dev, 300 in prod)
RATE_LIMIT_MAX_REQUESTS=1000

# ============================================
# Scheduled Jobs Configuration
# ============================================
#
# Enable/disable scheduled background jobs
#
ENABLE_SCHEDULED_JOBS=false

# ============================================
# Weather API Configuration
# ============================================
#
# Open-Meteo Historical API (FREE, no API key required)
# Documentation: https://open-meteo.com/en/docs/historical-weather-api
# Used for historical weather data (2020-2025)
#
# OpenWeatherMap API (Required for forecast data)
# Documentation: https://openweathermap.org/api
# Used for weather forecast (5 days ahead)
# Get your API key from: https://openweathermap.org/api
# Free tier: 1,000,000 calls/month, 60 calls/minute
#
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# ============================================
# iApp Holiday API Configuration (Required for holiday data)
# ============================================
#
# Required: For holiday-based season calculation
# Get your API key from: https://iapp.co.th
# 
# Steps to get API key:
# 1. Visit https://iapp.co.th
# 2. Sign up / Log in
# 3. Go to API Key Management
# 4. Copy your API key here
#
IAPP_API_KEY=your_iapp_api_key_here
IAPP_API_URL=https://api.iapp.co.th/v3/store/data

